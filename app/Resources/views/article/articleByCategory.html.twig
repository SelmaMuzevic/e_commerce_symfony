{% extends 'base.html.twig' %}

{% block body %}
    <h1>Articles list</h1>

        {% for article in articles %}
            <tr>
                <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.nom }}</a></td>
                <td>{{ article.prix }}</td>
                <td>{{ article.photo }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.id }}</td>
            </tr>
        {% endfor %}
     
    <ul>
        <li>
            <a href="{{ path('article_new') }}">Create a new article</a>
        </li>
    </ul>
{% endblock %}
