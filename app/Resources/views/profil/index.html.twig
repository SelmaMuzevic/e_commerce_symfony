{% extends 'base.html.twig' %}

{% block body %}
    <h1>Profils list</h1>

    <table>
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Commande</th>
                <th>Date</th>
                <th>Description</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profil in profils %}
            <tr>
                <td><a href="{{ path('profil_show', { 'id': profil.id }) }}">{{ profil.nom }}</a></td>
                <td>{{ profil.prenom }}</td>
                <td>{{ profil.commande }}</td>
                <td>{% if profil.date %}{{ profil.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ profil.description }}</td>
                <td>{{ profil.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('profil_show', { 'id': profil.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('profil_edit', { 'id': profil.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('profil_new') }}">Create a new profil</a>
        </li>
    </ul>
{% endblock %}
